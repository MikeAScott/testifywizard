<?xml version="1.0" encoding="UTF-8"?>
<page xmlns="http://jboss.com/products/seam/pages"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://jboss.com/products/seam/pages http://jboss.com/products/seam/pages-2.2.xsd"
		login-required="true">
	
	<begin-conversation join="true"/>
	
	<navigation from-action="#{userService.saveOrUpdate(user)}">
		<rule if-outcome="success">
			<redirect>
				<message>#{messages['general.save.success']}
				</message>
			</redirect>
		</rule>
	</navigation>

	<navigation from-action="#{userService.delete(user)}">
		<rule if-outcome="success">
			<redirect view-id="/page/user/userList.xhtml">
				<message>#{messages['general.delete.success']}
				</message>
			</redirect>
		</rule>
	</navigation>
</page>
